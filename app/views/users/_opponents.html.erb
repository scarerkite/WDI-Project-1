<div class="content">
<% @opponents.each do |opponent, shared_game| %>
<br>
  <h3><%= opponent.user_name %></h3>
  <div class="opponent">
    <% if shared_game %>
      <%= link_to "Current Game", game_path(shared_game), :class => 'game_button'  %>
      
    <% else %>
      <%= link_to "New Game", games_path(player_2: opponent.id), method: :post, :class => 'game_button' %>
      
    <% end %>
  </div>
<% end %>
</div>

